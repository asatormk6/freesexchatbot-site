      body::after {
        content: '';
        position: absolute;
        inset: 0;
        background-image: repeating-linear-gradient(
          to bottom,
          rgba(255, 255, 255, 0.01),
          rgba(255, 255, 255, 0.01) 1px,
          transparent 1px,
          transparent 2px
        );
        z-index: 0;
        pointer-events: none;
      }

      @keyframes scanlines {
