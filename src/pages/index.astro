        margin-bottom: 0.6rem;
        color: var(--accent);
        text-shadow: 0 0 8px #00cc7a66, 0 0 14px #00cc7a33;
      }

      .cursor {
        display: inline-block;
        margin-left: 6px;
        width: 10px;
        animation: blink 1s steps(2, start) infinite;
        color: var(--accent);
      }

      @keyframes blink {
